@{
    ViewData["Title"] = "Details";
}

<h1>@Model.Titre</h1>

<div>
    <h4>Créé le @Model.DateCreation.ToString("dd MMMM yyyy hh:mm:ss")</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>
<div>
