@model ASPMVC.Models.ViewModels.TacheEditForm

@{
    ViewData["Title"] = "Edit";
    List<SelectListItem> statusOptions = new List<SelectListItem> {
        new SelectListItem() { Text = "En Cours", Value = "En Cours", Selected = Model.Status == "En Cours" },
        new SelectListItem() { Text = "Cloturée", Value = "Cloturée", Selected = Model.Status == "Cloturée" }
    };
}

<h1>Modification de "@Model.Titre"</h1>

<h4>Veuillez mettre à jour votre tâche</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Titre" class="control-label"></label>
                <input asp-for="Titre" class="form-control" />
                <span asp-validation-for="Titre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-select" asp-items="statusOptions"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirmer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Revenir à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
